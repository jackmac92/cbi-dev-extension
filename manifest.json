{
  "name": "jarvix",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Automate common tasks for cbi dev teams",
  "icons": {
    "16": "icons/icon-bitty.png",
    "48": "icons/icon-small.png",
    "128": "icons/icon-large.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/background.bundle.js"
    ],
    "persistent": true
  },
  "permissions": [
    "contentSettings",
    "contextMenus",
    "cookies",
    "management",
    "notifications",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "icons/icon-small.png",
    "default_title": "Jarvix"
  },
  "content_scripts": [
    {
      "matches": [ "*://*/*" ],
      "js": [
        "js/jquery/jquery.min.js",
        "src/common/index.js"
      ]
    },
    {
      "matches": ["*://dev.test.cbinsights.com/*"],
      "js": ["src/inject/screenshotHelper.js"]
    },
    {
      "matches": [
        "*://jenkins.cbinsights.com/job/*/*/console",
        "*://jenkins.cbinsights.com/job/*/*/consoleFull",
        "*://new-jenkins.cbinsights.com/job/*/*/console",
        "*://new-jenkins.cbinsights.com/job/*/*/consoleFull"
      ],
      "js": ["src/inject/jenkinsHelper.js"]
    },
    {
      "matches": ["*://crucible.cbinsights.com/cru/*"],
      "js": ["src/inject/reviewHelper.js"]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';"
}
